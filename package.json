{
  "name": "daily-trends",
  "version": "1.0.0",
  "description": "Feed for news aggregation.",
  "engines": {
    "node": ">= 18.12 <19"
  },
  "scripts": {
    "docker:up": "docker-compose --file docker-compose.db.yml up -d",
    "docker:down": "docker-compose --file docker-compose.db.yml down -v",
    "start:dev": "ts-node -r dotenv/config -r tsconfig-paths/register src/apps/api/index.ts",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "start": "node -r dotenv/config -r ./prod-paths.js dist/apps/api/index.js",
    "test": "NODE_ENV=test NODE_PATH=./ node --max_old_space_size=12240 ./node_modules/jest/bin/jest.js --config tests/jestConfig.js --detectOpenHandles tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidgj94/daily-trends.git"
  },
  "author": "David Gallardo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davidgj94/daily-trends/issues"
  },
  "homepage": "https://github.com/davidgj94/daily-trends#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "http-status-codes": "^2.2.0",
    "luxon": "^3.2.1",
    "mongoose": "^6.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/luxon": "^3.2.0",
    "dotenv": "^16.0.3",
    "jest": "^29.4.3",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.14.2",
    "typescript": "^4.9.5"
  }
}
